{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "gitIgnoredAuthors": ["githubaction@githubaction.com"],
  "rebaseWhen": "never",
  "prCreation": "immediate",
  "logLevel": "debug"
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchFileNames": ["apps/meting-api/**/docker-compose.yml"],
      "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "matchFileNames": ["apps/**/docker-compose.yml"],
      "versioning": "semver"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.nju.edu.cn/umami-software/umami"],
      "replaceString": "ghcr.io/umami-software/umami",
      "versioning": "semver",
      "versionCompatibility": "^(?<compatibility>.*)-(?<version>.*)$"
    }
  ]
}
